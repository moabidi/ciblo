{% extends 'OivBundle:advancedSearch:layout.html.twig' %}

{% block head %}
    {% include 'OivBundle:advancedSearch/blocks:head.html.twig' %}
    <link href=" {{ asset('/bundles/oiv/css/oiv-bo.css') }}" rel="stylesheet" type="text/css"/>
{% endblock head %}

{% block sidebar %}
    {% include 'OivBundle:advancedSearch/blocks:side-bar.html.twig' with {'isBo':true} %}
{% endblock sidebar %}

{% block selectedFilter %}
    {% include 'OivBundle:advancedSearch/blocks:selected-filters.html.twig' with {'isBo':true} %}
{% endblock %}

{% block menu_user %}
    <li class="dropdown dropdown-user">
        <a href="{{ path('result-search') }}">{{ 'Country Plug'|trans }}</a>
    </li>
    <li class="dropdown dropdown-user">
        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
            <img alt="" class="img-circle" src=" {{ asset('/bundles/oiv/img/frontend/logo-small.png') }}"/>
            <span class="username username-hide-on-mobile"> {{ app.user.name }} </span>
            <i class="fa fa-angle-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-default">
            <li>
                <a href="javascript:;">
                    <i class="icon-settings"></i> {{ 'Home'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('profile') }}">
                    <i class="icon-user"></i> {{ 'Profile'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('manager_users') }}">
                    <i class="icon-user"></i> {{ 'Gestion des utilisateurs'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('oiv_logout') }}">
                    <i class="icon-lock"></i> {{ 'Log Out'|trans }}
                </a>
            </li>
        </ul>
    </li>
{% endblock %}
{% block actions %}
    <div class="actions">
        <div class="btn-group">
            <a  class="btn default yellow-stripe dropdown-toggle" href="javascript:;" data-toggle="dropdown">
                <i class="fa fa-share"></i>
                <span class="hidden-480"> Export </span>
                <i class="fa fa-angle-down"></i>
            </a>
            <ul class="dropdown-menu pull-right">
                <li>
                    <a class="export-btn" data-export="csv" href="javascript:;"> {{ 'Export to'|trans }} CSV</a>
                </li>
                {#<li>#}
                    {#<a class="export-btn" data-export="pdf" href="javascript:;"> {{ 'Export to'|trans }} PDF</a>#}
                {#</li>#}
                {#<li>#}
                {#<a id="export-point" href="javascript:;"> {{ 'Export to power point'|trans }} </a>#}
                {#</li>#}
            </ul>
        </div>
    </div>
{% endblock %}
{% block dataTable %}
    <div id="bo" class="tabbable">
        <ul class="nav nav-tabs nav-tabs-lg">
            <li class="active">
                <a href="#tab_table" data-toggle="tab" aria-expanded="true">
                    {{ 'Details'|trans }}
                </a>
            </li>
            <li>
                <a href="#tab_graph" data-toggle="tab" aria-expanded="true">
                    {{ 'Graphic'|trans }}
                </a>
            </li>
            <li>
                <a href="#tab_edit" data-toggle="tab" aria-expanded="true">
                    {{ 'Edit data'|trans }}
                </a>
            </li>
            <li>
                <a href="#tab_add" data-toggle="tab" aria-expanded="true">
                    {{ 'Add data'|trans }}
                </a>
            </li>
            <li>
                <a href="#tab_import" data-toggle="tab" aria-expanded="true">
                    {{ 'Import data'|trans }}
                </a>
            </li>
            <li>
                <a href="#tab_caluclatedstat" data-toggle="tab" aria-expanded="true">
                    {{ 'calculated stat'|trans }}
                </a>
            </li>
            <li>
                <a href="#tab_parameter" data-toggle="tab" aria-expanded="true">
                    {{ 'Parameters'|trans }}
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="tab_table">
                <div class="table-container">
                    <div id="datatable_orders_wrapper" class="dataTables_wrapper dataTables_extended_wrapper no-footer">
                        {#{% include 'OivBundle:advancedSearch/blocks:pagination.html.twig' %}#}
                        {% include 'OivBundle:backOffice/blocks:table-adv-search.html.twig' %}
                        {% include 'OivBundle:advancedSearch/blocks:pagination.html.twig' %}
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="tab_graph">
                {% include 'OivBundle:advancedSearch/blocks:graphic.html.twig' %}
            </div>
            <div class="tab-pane" id="tab_edit">
                {% include 'OivBundle:backOffice/blocks:create.html.twig' with {'isEdit': true}%}
            </div>
            <div class="tab-pane" id="tab_add">
                {% include 'OivBundle:backOffice/blocks:create.html.twig' %}
            </div>
            <div class="tab-pane" id="tab_import">
                {% include 'OivBundle:backOffice/blocks:import.html.twig' %}
            </div>
            <div class="tab-pane" id="tab_caluclatedstat">
                {% include 'OivBundle:backOffice/blocks:calculated_stat.html.twig' %}
            </div>
            <div class="tab-pane" id="tab_parameter">
                {% include 'OivBundle:backOffice/blocks:parameters.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
{% block load_js %}
    {% include 'OivBundle:advancedSearch/blocks:load_js.html.twig' %}
    <script src=" {{ asset('/bundles/oiv/js/kinetic.js') }}"></script>
    <script src=" {{ asset('/bundles/oiv/js/plugins/uniform/jquery.uniform.min.js') }}"></script>
    <script src=" {{ asset('/bundles/oiv/js/oiv-bo.js') }}"></script>
{% endblock load_js %}