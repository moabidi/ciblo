<div class="fiche-country container">
    <div class="row">
        <div class="info col-sm-12 col-md-6">
            <div aria-label="...">
                <ul class="pager">
                    <li class="next disabled"><a href="#" onclick="return false">2019 <span
                                    aria-hidden="true">&rarr;</span></a></li>
                    <li class="centred">
                        <img src="{{ asset('/bundles/oiv/css/flags-64/blank.gif') }}" class="flag flag-fr"
                             alt="France"/>
                        <span id="country-name" class="country">France</span>
                        <img src="{{ asset('/bundles/oiv/css/flags-64/blank.gif') }}" class="flag flag-fr"
                             alt="France"/>
                    </li>
                    <li class="previous"><a href="#"><span aria-hidden="true">&larr;</span> 2017</a></li>
                </ul>
            </div>
            <div class="thumbnail">
                <!--<img src="..." alt="...">-->
                <div class="caption">
                    <!--<h3>Thumbnail label</h3>-->
                    <ul>
                        <li>
                            <a href="#"><strong>Superficie </strong>: <span
                                        class="badge">{{ stats.usedArea ~ ' / ' ~ stats.globalArea }}</span></a>
                        </li>
                    </ul>
                    <div class="search-list table-responsive table-wrapper-scroll-y table-fixed">
                        <table class="table">
                            <thead>
                            <th></th>
                            <th>Production</th>
                            <th>Consommation</th>
                            <th>Importation</th>
                            <th>Exportation</th>
                            </thead>
                            <tbody>
                            {% for product in stats.products %}
                                <tr>
                                    <td>{{ product.label }} {% if loop.index0 == 0 %}<span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Raisin frais ( toutes usages)"></span>{% endif %}</td>
                                    <td>
                                        <span class="badge" {% if product.stat.prod is null  %}data-toggle="tooltip" title="Pas de production"{% endif %}>{{ product.stat.prod is null ? '-':product.stat.prod }}</span>
                                        <span class="btn btn-default btn-lg">
                                            <span class="glyphicon glyphicon-stats" aria-hidden="false" data-toggle="tooltip" title="voir statistiques"></span>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge" {% if product.stat.consumption is null %}data-toggle="tooltip" title="Pas de consommation"{% endif %}>{{ product.stat.consumption is null ? '-':product.stat.consumption }}</span>
                                        <span class="btn btn-default btn-lg">
                                            <span class="glyphicon glyphicon-stats" aria-hidden="false" data-toggle="tooltip" title="voir statistiques"></span>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge" {% if product.stat.export is null %}data-toggle="tooltip" title="Pas d'export"{% endif %}>{{ product.stat.export is null ? '-':product.stat.export }}</span>
                                        <span class="btn btn-default btn-lg">
                                            <span class="glyphicon glyphicon-stats" aria-hidden="false" data-toggle="tooltip" title="voir statistiques"></span>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge" {% if product.stat.import is null %}data-toggle="tooltip" title="Pas d'import"{% endif %}>{{ product.stat.import is null ? '-':product.stat.import }}</span>
                                        <span class="btn btn-default btn-lg">
                                            <span class="glyphicon glyphicon-stats" aria-hidden="false" data-toggle="tooltip" title="voir statistiques"></span>
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <ul>
                        <li><a href="#"><strong>Nombre de cépage </strong>: <span
                                        class="badge">{{ stats.nbVariety }}</span></a></li>
                        <li><a href="#"><strong>Nombre de formation </strong>: <span
                                        class="badge">{{ stats.nbEducation }}</span></a></li>
                        <li>
                            <a href="#">
                                <strong>IG/AO </strong> <span class="glyphicon glyphicon-info-sign" aria-hidden="false" data-toggle="tooltip" title="Nombre d'appelation géographique"></span>:
                                <span class="badge">{{ stats.nbNaming }}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>